<%- include('../partials/header') %>
<table id="list">
    <thead>
        <tr>
            <th>Airline</th>
            <th>Airport</th>
            <th>Flight Number</th>
            <th>Departs At</th>
        </tr>
    </thead>
    <tbody>
        <%flights.forEach(function(f) {%>
            <%const today = new Date()%>
            <tr <%- Date.parse(f.departs) < new Date() ? 'class="expired"' : '' %>>
                <td><%= f.airline %></td>
                <td><%= f.airport %></td>
                <td><%= f.flightNo %></td>
                <td><%= f.departs %></td>
                <td><a href="/flights/<%= f._id%>">DETAILS</a></td>
            </tr>
            <% }); %>
    </tbody>
</table>
    
<%- include('../partials/footer') %>